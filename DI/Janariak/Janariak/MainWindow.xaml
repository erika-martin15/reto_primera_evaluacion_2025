<Window x:Class="Janariak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trattoria - Login" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    
    <!-- Fondo claro como en la app móvil -->
    <Grid Background="{StaticResource BrushFondoClaro}">
        <Grid.RowDefinitions>
            <!-- Cabecera roja (similar a la app móvil) -->
            <RowDefinition Height="280"/>
            <!-- Formulario de login -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- CABECERA ROJA (como en la app móvil)        -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Style="{StaticResource EstiloCabecera}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Aquí puedes insertar tu logo si lo tienes -->
                <!-- Por ahora usamos texto como título -->
                <TextBlock Text="TRATTORIA"
                           Style="{StaticResource EstiloTituloCabecera}"
                           Margin="0,0,0,10"/>
                <TextBlock Text="CUCINA FAMILIARE"
                           Foreground="{StaticResource BrushTextoBlanco}"
                           FontSize="16"
                           TextAlignment="Center"
                           Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- ============================================ -->
        <!-- FORMULARIO DE LOGIN (tarjeta blanca)       -->
        <!-- ============================================ -->
        <!-- Tarjeta blanca que se superpone a la cabecera (como en la app móvil) -->
        <Border Grid.Row="1" 
                Style="{StaticResource EstiloTarjeta}"
                Width="400"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,-60,0,0">
            <StackPanel>
                <!-- Campo Usuario -->
                <Label Content="Usuario:" Style="{StaticResource EstiloLabelCampo}"/>
                <TextBox x:Name="txtUsuario" 
                         Style="{StaticResource EstiloTextBox}"
                         Height="40"
                         Margin="0,0,0,10"/>

                <!-- Campo Contraseña -->
                <Label Content="Contraseña:" Style="{StaticResource EstiloLabelCampo}"/>
                <PasswordBox x:Name="txtPassword" 
                            Width="Auto"
                            Height="40"
                            Padding="10,8"
                            Background="{StaticResource BrushBlanco}"
                            BorderBrush="{StaticResource BrushDivisor}"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                    <!-- Estilo para PasswordBox (similar al TextBox) -->
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource BrushRojo}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Botón Entrar (verde, estilo principal) -->
                <Button Content="ENTRAR"
                        Style="{StaticResource EstiloBotonPrincipal}"
                        Width="250"
                        Height="50"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Click="BtnLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
