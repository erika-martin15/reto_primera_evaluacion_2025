<Application x:Class="Janariak.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Janariak"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Incluimos el diccionario de recursos con todos los estilos -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Cargamos los estilos desde el archivo Estilos.xaml -->
                <ResourceDictionary Source="Resources/Estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
