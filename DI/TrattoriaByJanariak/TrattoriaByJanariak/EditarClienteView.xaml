<Window x:Class="TrattoriaByJanariak.EditarClienteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrattoriaByJanariak"
        mc:Ignorable="d"
        Title="EditarClienteView" Height="650" Width="600">
    <Grid Background="{StaticResource BrushFondoClaro}">
        <Border Style="{StaticResource EstiloTarjeta}"
                Width="500"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Editar Cliente"
                          Style="{StaticResource EstiloLabelTitulo}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,25"/>
                <Label Content="Nombre:" Style="{StaticResource EstiloLabelCampo}"/>
                <TextBox x:Name="txtNombre" 
                        Style="{StaticResource EstiloTextBox}"
                        Height="40"
                        Margin="0,0,0,10"/>
                <Label Content="Apellido:" Style="{StaticResource EstiloLabelCampo}"/>
                <TextBox x:Name="txtApellido" 
                        Style="{StaticResource EstiloTextBox}"
                        Height="40"
                        Margin="0,0,0,10"/>
                <Label Content="Email:" Style="{StaticResource EstiloLabelCampo}"/>
                <TextBox x:Name="txtEmail" 
                        Style="{StaticResource EstiloTextBox}"
                        Height="40"
                        Margin="0,0,0,10"/>
                <Label Content="Teléfono:" Style="{StaticResource EstiloLabelCampo}"/>
                <TextBox x:Name="txtTelefono" 
                        Style="{StaticResource EstiloTextBox}"
                        Height="40"
                        Margin="0,0,0,20"/>
                <Button Content="Guardar" 
                       Style="{StaticResource EstiloBotonPrincipal}"
                       Width="150" 
                       Height="45"
                       HorizontalAlignment="Center" 
                       Click="BtnGuardar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
