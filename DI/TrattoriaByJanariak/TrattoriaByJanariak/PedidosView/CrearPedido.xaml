<Window x:Class="TrattoriaByJanariak.PedidosView.CrearPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrattoriaByJanariak.PedidosView"
        mc:Ignorable="d"
        Title="CrearPedido" Height="450" Width="800">
    <Grid Background="{StaticResource BrushFondoClaro}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#2D2D30" Padding="15">
            <StackPanel>
                <TextBlock Text="Categorías"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource BrushTextoBlanco}"
                           Margin="0,0,0,20"/>
                <Button Content="Entrantes" 
                        Style="{StaticResource EstiloBotonSecundario}"
                        Margin="0,8" 
                        Height="45" 
                        Click="BtnCategoria_Click"/>
                <Button Content="Principales" 
                        Style="{StaticResource EstiloBotonSecundario}"
                        Margin="0,8" 
                        Height="45" 
                        Click="BtnCategoria_Click"/>
                <Button Content="Bebidas" 
                        Style="{StaticResource EstiloBotonSecundario}"
                        Margin="0,8" 
                        Height="45" 
                        Click="BtnCategoria_Click"/>
                <Button Content="Postres" 
                        Style="{StaticResource EstiloBotonSecundario}"
                        Margin="0,8" 
                        Height="45" 
                        Click="BtnCategoria_Click"/>
            </StackPanel>
        </Border>
        <ScrollViewer Grid.Column="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="panelPlatos">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="250" ItemHeight="320"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource BrushBlanco}" 
                                CornerRadius="12" 
                                Margin="12" 
                                Padding="12" 
                                Width="230">
                            <Border.Effect>
                                <DropShadowEffect Color="#30000000" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <Image Source="{Binding Imagen}" 
                                       Height="140" 
                                       Margin="0,0,0,10"
                                       Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Nombre}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Foreground="{StaticResource BrushTextoPrimario}"
                                          Margin="0,0,0,5"
                                          TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Precio, StringFormat='{}{0:C}'}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource BrushVerde}"
                                          Margin="0,0,0,10"/>
                                <Button Content="Añadir"
                                        Style="{StaticResource EstiloBotonSecundario}"
                                        Margin="0,5"
                                        Height="40"
                                        Click="BtnAgregarPlato_Click"
                                        Tag="{Binding}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Border Grid.Column="2" 
                Background="{StaticResource BrushBlanco}" 
                Padding="20"
                BorderBrush="{StaticResource BrushDivisor}"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Tu Pedido" 
                          Style="{StaticResource EstiloLabelTitulo}"
                          Grid.Row="0"
                          Margin="0,0,0,15"/>
                <ListBox x:Name="listaCarrito" 
                        Grid.Row="1" 
                        Style="{StaticResource EstiloListBox}"
                        ItemContainerStyle="{StaticResource EstiloListBoxItem}"
                        FontSize="14"
                        Margin="0,0,0,15">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Nombre}" 
                                          Grid.Column="0"
                                          Foreground="{StaticResource BrushTextoPrimario}"
                                          VerticalAlignment="Center"
                                          TextWrapping="Wrap"/>
                                <TextBlock Text="x{Binding Cantidad}" 
                                          Grid.Column="1"
                                          Foreground="{StaticResource BrushTextoSecundario}"
                                          Margin="10,0"
                                          VerticalAlignment="Center"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding TotalLinea, StringFormat='{}{0:C}'}" 
                                          Grid.Column="2"
                                          Foreground="{StaticResource BrushVerde}"
                                          FontWeight="Bold"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="2">
                    <Border Height="1" 
                           Background="{StaticResource BrushDivisor}" 
                           Margin="0,0,0,15"/>
                    <TextBlock x:Name="txtTotal" 
                              FontSize="22" 
                              FontWeight="Bold"
                              Foreground="{StaticResource BrushTextoPrimario}"
                              Margin="0,0,0,15"
                              HorizontalAlignment="Center"/>
                    <Button Content="Finalizar Pedido"
                            Style="{StaticResource EstiloBotonPrincipal}"
                            Height="55"
                            FontSize="18"
                            Click="BtnFinalizar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
