<Window x:Class="TrattoriaByJanariak.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrattoriaByJanariak"
        mc:Ignorable="d"
        Title="Home" Height="600" Width="1000">
    <Grid Background="{StaticResource BrushFondoClaro}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#2D2D30" Grid.Column="0" Padding="15">
            <StackPanel>
                <TextBlock Text="Menú"
                           Foreground="{StaticResource BrushTextoBlanco}"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,25"/>
                <Button x:Name="btnVerClientes" 
                        Content="Ver Clientes" 
                        Style="{StaticResource EstiloBotonMenu}"
                        Margin="0,5" 
                        Height="45" 
                        Click="BtnVerClientes_Click"/>
                <Button x:Name="btnVerPedidos" 
                        Content="Ver Pedidos" 
                        Style="{StaticResource EstiloBotonMenu}"
                        Margin="0,5" 
                        Height="45" 
                        Click="BtnVerPedidos_Click"/>
                <Button x:Name="btnCrearPedidos" 
                        Content="Crear Pedidos" 
                        Style="{StaticResource EstiloBotonMenu}"
                        Margin="0,5" 
                        Height="45" 
                        Click="BtnCrearPedidos_Click"/>
                <Button x:Name="btnSalir" 
                        Content="Salir" 
                        Style="{StaticResource EstiloBotonAccion}"
                        Margin="0,20,0,0" 
                        Height="40" 
                        Click="BtnSalir_Click"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dgObjetos" 
                     Style="{StaticResource EstiloDataGrid}"
                     Grid.Row="0"
                     Margin="0,0,0,15">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Acciones" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Editar" 
                                            Margin="5,0" 
                                            Padding="10,5" 
                                            Tag="{Binding Id}" 
                                            Click="BtnEditar_Click"
                                            Background="{StaticResource BrushVerde}"
                                            Foreground="{StaticResource BrushTextoBlanco}"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BrushVerdeOscuro}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Eliminar" 
                                            Margin="5,0" 
                                            Padding="10,5" 
                                            Tag="{Binding Id}" 
                                            Click="BtnEliminar_Click"
                                            Style="{StaticResource EstiloBotonAccion}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="btnRefrescar" 
                    Content="Refrescar" 
                    Style="{StaticResource EstiloBotonSecundario}"
                    Width="120" 
                    Height="40" 
                    Grid.Row="1"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" 
                    Click="BtnRefrescar_Click"/>
        </Grid>
    </Grid>
</Window>
