<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorRojo">#D32F2F</Color>
    <Color x:Key="ColorRojoOscuro">#B71C1C</Color>
    <Color x:Key="ColorVerde">#388E3C</Color>
    <Color x:Key="ColorVerdeOscuro">#1B5E20</Color>
    <Color x:Key="ColorDorado">#F57C00</Color>
    <Color x:Key="ColorCrema">#FFF8E1</Color>

    <Color x:Key="ColorFondoClaro">#FAFAFA</Color>
    <Color x:Key="ColorBlanco">#FFFFFF</Color>
    <Color x:Key="ColorFondoTarjeta">#FFFFFF</Color>

    <Color x:Key="ColorTextoPrimario">#212121</Color>
    <Color x:Key="ColorTextoSecundario">#757575</Color>
    <Color x:Key="ColorTextoBlanco">#FFFFFF</Color>

    <Color x:Key="ColorSombra">#30000000</Color>
    <Color x:Key="ColorDivisor">#E0E0E0</Color>

    <SolidColorBrush x:Key="BrushRojo" Color="{StaticResource ColorRojo}"/>
    <SolidColorBrush x:Key="BrushRojoOscuro" Color="{StaticResource ColorRojoOscuro}"/>
    <SolidColorBrush x:Key="BrushVerde" Color="{StaticResource ColorVerde}"/>
    <SolidColorBrush x:Key="BrushVerdeOscuro" Color="{StaticResource ColorVerdeOscuro}"/>
    <SolidColorBrush x:Key="BrushDorado" Color="{StaticResource ColorDorado}"/>
    <SolidColorBrush x:Key="BrushCrema" Color="{StaticResource ColorCrema}"/>
    <SolidColorBrush x:Key="BrushFondoClaro" Color="{StaticResource ColorFondoClaro}"/>
    <SolidColorBrush x:Key="BrushBlanco" Color="{StaticResource ColorBlanco}"/>
    <SolidColorBrush x:Key="BrushTextoPrimario" Color="{StaticResource ColorTextoPrimario}"/>
    <SolidColorBrush x:Key="BrushTextoSecundario" Color="{StaticResource ColorTextoSecundario}"/>
    <SolidColorBrush x:Key="BrushTextoBlanco" Color="{StaticResource ColorTextoBlanco}"/>
    <SolidColorBrush x:Key="BrushDivisor" Color="{StaticResource ColorDivisor}"/>
    
    <Style x:Key="EstiloBotonPrincipal" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BrushVerde}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextoBlanco}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushVerdeOscuro}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="EstiloBotonSecundario" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BrushDorado}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextoBlanco}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="24"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E65100"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="EstiloBotonMenu" TargetType="Button">
        <Setter Property="Background" Value="#2D2D30"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextoBlanco}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#3A3A3D"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="EstiloBotonAccion" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BrushRojo}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextoBlanco}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushRojoOscuro}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="EstiloTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BrushBlanco}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushTextoPrimario}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushDivisor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource BrushRojo}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="EstiloLabelTitulo" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource BrushTextoPrimario}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>
    
    <Style x:Key="EstiloLabelCampo" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource BrushTextoPrimario}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,10,0,5"/>
    </Style>
    
    <Style x:Key="EstiloTarjeta" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushBlanco}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#30000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="EstiloCabecera" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushRojo}"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#30000000" BlurRadius="4" ShadowDepth="2" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="EstiloTituloCabecera" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BrushTextoBlanco}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="EstiloDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource BrushBlanco}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushDivisor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="RowBackground" Value="{StaticResource BrushBlanco}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource BrushFondoClaro}"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BrushDivisor}"/>
        <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="AutoGenerateColumns" Value="True"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <Style x:Key="EstiloListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource BrushFondoClaro}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10"/>
    </Style>
    
    <Style x:Key="EstiloListBoxItem" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Background" Value="{StaticResource BrushBlanco}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushFondoClaro}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource BrushCrema}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>